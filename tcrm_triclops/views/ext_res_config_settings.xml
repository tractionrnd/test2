<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tcrm_triclops.res_config_settings_tricolops" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tricolops.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Tricolops" string="Tricolops" data-key="tcrm_triclops">
                    <div id="tcrm_Tricolops_config_integration">
                        <h2>Tricolops Integration</h2>

                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Tricolops Web Server URL</span>
                                    <div class="text-muted">
                                        Please provide Tricolops Web Server URL
                                    </div>
                                    <div class="text-muted">
                                        <field name="x_tricolops_webserverl" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>